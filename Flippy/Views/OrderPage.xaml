                            <Image Source="star_full_icon.svg" />
                            <Image Source="star_full_icon.svg" />
                            <Image Source="star_empty_icon.svg" />
                        </HorizontalStackLayout>
                        <Label
                            Grid.Column="1"
                            FontSize="10"
                            Style="{StaticResource BlueLabel}"
                            Text="Write a Review">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                            </Label.GestureRecognizers>
                        </Label>
                    </Grid>
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
